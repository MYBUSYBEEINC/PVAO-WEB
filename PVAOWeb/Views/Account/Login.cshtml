@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Metas -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Philippine Veterans Affairs Office" />
    <!-- Links -->
    <link rel="icon" type="image/png" href="#" />
    <title>Philippine Veterans Affairs Office (PVAO) | Web Portal</title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link href="~/Content/css/preloader.css" rel="stylesheet" />

    @Styles.Render("~/Content/login")
</head>
<body>
    <div id="page-loader">
        <div id="loader-logo"></div>
    </div>

    <div id="login-wrapper" class="container" data-autheticate-user-url="@Url.Action("Authenticate", "Account")" data-save-audit-log-url="@Url.Action("SaveAuditLog", "AuditLog")">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <img class="profile-img" src="@Url.Content("~/Content/images/pvao-logo.png")" alt="">
                    <form class="form-signin">
                        <p class="m-t text-center">
                            Welcome to Philippine Veterans Affairs Office web portal.
                        </p>

                        <p id="login-validation-alert" class="validation"></p>

                        <br />

                        <input id="username-text" type="text" class="form-control" placeholder="Username" value="admin" required autofocus>
                        <input id="password-text" type="password" class="form-control" placeholder="Password" value="admin" required>
                        <a id="login-btn" type="button" href="@Url.Action("Index", "Home")" class="btn btn-lg btn-pvao-green btn-block">Log in</a>
                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me">Remember me
                        </label>
                        <a href="#" class="pull-right need-help text-pvao">Forgot your password?</a><span class="clearfix"></span>
                    </form>
                    <br />
                    <p class="m-t text-center">
                        Copyright © @DateTime.Now.Year <strong class="text-pvao">Philippine Veterans<br />Affairs Office (PVAO). </strong>All Rights Reserved.
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@Scripts.Render("~/Scripts/authenticate")
